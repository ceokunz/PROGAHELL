<Window x:Class="laba_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:laba_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <!--Вонючки-говнючки колонки-->
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!--БОЛЬШЕ ГРИДОВ БОГУ ГРИДОВ-->

        <Grid x:Name="EnemyGrid" Grid.Column="0" Margin="10" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <!-- имя -->

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Enemy name:"/>
                <TextBlock Grid.Column="1" x:Name="EnemyNameBlock" Text="{Binding Path = Name}"/>
            </Grid>

            <!-- хп-->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Enemy HP:"/>
                <TextBlock Grid.Column="1" x:Name="EnemyHPBlock" Text="{Binding Path = CurrentHitpoints}"/>
            </Grid>
            

            <!-- голда -->
            <Grid Grid.Row="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Enemy gold:"/>
                <TextBlock Grid.Column="1" x:Name="EnemyGoldBlock" Text="{Binding Path = GoldReward}"/>
            </Grid>
        </Grid>

        <!--я с этими гридами знаете че делал....-->

        <Grid Grid.Column="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Name="IconGrid" Grid.Column="0" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="нажмите чтобы ударить злату и валеру" HorizontalAlignment="Center"></TextBlock>
                <!--CLICK to deal DAMAGE!-->
                <Button Grid.Row="1" Width="200" Background="Transparent" Click="Button_Click">
                    <Image Name="scene" Source="{Binding Path=IconPath}"/>
                </Button>
                <UniformGrid Grid.Row="2" Columns="2" Height="50" Margin="10">
                    <Button x:Name="ButtonRepeat" Content="REPEAT" Click="Repeat_Click"/>
                    <Button x:Name="ButtonNext" Content="NEXT" Click="Next_Click"/>
                </UniformGrid>
            </Grid>

            <Grid x:Name="PlayerGrid" Grid.Column="2" Margin="10" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Players level:"/>
                    <TextBlock Grid.Column="2" x:Name="PlayerLvl" Text="{Binding Path = Lvl}"/>
                </Grid>

                <Grid Grid.Row="2">
                    <Button Content="UPGRADE" Click="UpgradeButton" x:Name="Upgrade"></Button>
                </Grid>

                <!-- Злата игрока )))))))) -->
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Players gold:"/>
                    <TextBlock Grid.Column="1" x:Name="PlayerGold" Text="{Binding Path = Gold}"/>
                </Grid>

                <Grid Grid.Row="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Players damage:"/>
                    <TextBlock Grid.Column="1" x:Name="PlayerDamage" Text="{Binding Path = Damage}"/>
                </Grid>
            </Grid>
        </Grid>

        <!--<MediaElement Name="VideoControl"
                      Source="C:\true_end.wmv"
                      LoadedBehavior="Manual"
                      UnloadedBehavior="Stop"
                      Visibility="Collapsed"
                      MediaEnded="VideoControl_MediaEnded"/>-->
    </Grid>
</Window>